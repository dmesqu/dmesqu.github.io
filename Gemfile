# Gemfile

source "https://rubygems.org"

# Use the github-pages gem which includes the right version of Jekyll and dependencies
gem "github-pages", group: :jekyll_plugins

# Common plugins for Jekyll sites on GitHub Pages
gem "jekyll-seo-tag"
gem "jekyll-feed"
gem "jekyll-sitemap"
gem "jekyll-gist"

# Optional: You can include other plugins as needed, but make sure they're supported by GitHub Pages
gem "jekyll-paginate"
gem "jekyll-optional-front-matter"
gem "jekyll-relative-links"
gem "jekyll-titles-from-headings"
gem "jekyll-default-layout"
gem "jekyll-readme-index"

